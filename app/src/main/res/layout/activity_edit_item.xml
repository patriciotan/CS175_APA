<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:weightSum="12.5">

        <RelativeLayout
            android:id="@+id/subjColor"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/circle"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:padding="15dp">

            <TextView
                android:id="@+id/subjLetter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/m"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textSize="70dp"
                android:textColor="@color/white"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/subjTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:text="Large Text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/New"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Edit Item"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/rawScore"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/form_height"
            android:hint="Raw Score"
            android:inputType="number"
            android:textSize="@dimen/form_textSize"
            android:layout_weight="1"
            android:background="@drawable/green_button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/totalScore"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/form_height"
            android:hint="Total Score"
            android:inputType="number"
            android:layout_weight="1"
            android:textSize="@dimen/form_textSize"
            android:background="@drawable/green_button"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/dateScore"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/form_height"
            android:hint="Date"
            android:inputType="date"
            android:textSize="@dimen/form_textSize"
            android:layout_weight="1"
            android:background="@drawable/green_button"
            android:gravity="center_vertical" />

    </LinearLayout>
</ScrollView>