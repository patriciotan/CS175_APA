<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="80dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/New"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Add new Item"
            android:padding="5dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:id="@+id/Checkb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:paddingTop="5dp"
                android:checkedButton="@+id/radioS">

                <RadioButton
                    android:id="@+id/radioS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seatwork"
                    android:layout_weight="1"/>

                <RadioButton
                    android:id="@+id/radioQ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quiz"
                    android:layout_weight="1"/>

                <RadioButton
                    android:id="@+id/radioA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Assignment"
                    android:layout_weight="1"/>

            </RadioGroup>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"/>

        <EditText
            android:id="@+id/rawScore"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/form_height"
            android:hint="Raw Score"
            android:inputType="number"
            android:textSize="@dimen/form_textSize"
            android:background="@drawable/green_button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"/>

        <EditText
            android:id="@+id/totalScore"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/form_height"
            android:hint="Total Score"
            android:inputType="number"
            android:textSize="@dimen/form_textSize"
            android:background="@drawable/green_button"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"/>

        <Button
            android:id="@+id/dateScore"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/form_height"
            android:hint="Date"
            android:inputType="date"
            android:textSize="@dimen/form_textSize"
            android:background="@drawable/green_button"
            android:gravity="start" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"/>

        <Button
            android:id="@+id/save"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:background="@drawable/log_in"
            android:clickable="true"
            android:onClick="saveNewClick"/>

    </LinearLayout>
</ScrollView>